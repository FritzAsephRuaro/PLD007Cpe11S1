#include <iostream>
#include <cmath>
using namespace std;

int main()
{
	int num1,num2,result;
	char operation;
	
	cout<<"Input 2 integers: "<<endl;
		cin>>num1>>num2;
		
		cout<<"Choose an operation: "<<endl;
		cout<<"\n";
		
		cout<<" + for Addition \n";
		cout<<"- for Subtraction \n";
		cout<<"* for multiplication \n";
		cout<<"/ for Division \n";
			cin>>operation;
		
	switch(operation) {
		case '+':
			result=num1+num2;
			cout<<"The sum is: "<< result <<endl;
			break;
		case '-':
			result=num1-num2;
			cout<<"The difference is: "<< result <<endl;
			break;
		case '*':
			result=num1*num2;
			cout<<"The product is: "<< result <<endl;
			break;
		case '/':
			result=num1/num2;
			cout<<"The quotient is: "<<result<<endl;
			break;
	}
return 0;	
}
